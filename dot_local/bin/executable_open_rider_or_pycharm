#!/bin/bash

# Required parameters:
# @raycast.schemaVersion 1
# @raycast.title open_ide
# @raycast.mode silent

# Optional parameters:
# @raycast.icon ðŸ¤–

# Documentation:
# @raycast.description Opens IDE based on priority: Rider > WebStorm > PyCharm. If none are open, opens PyCharm.
# @raycast.author Fabio Meier
# @raycast.authorURL https//github.com/fabitosh

# Bind to a hotkey in Raycast to quickly switch to the IDEs

if pgrep -f "Rider" >/dev/null; then
  open -a "Rider"
elif pgrep -f "WebStorm" >/dev/null; then
  open -a "WebStorm"
else
  open -a "PyCharm"
fi
