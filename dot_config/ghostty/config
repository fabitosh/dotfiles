shell-integration = zsh
font-family = JetBrains Mono
theme = Dracula
mouse-hide-while-typing = false

keybind = ctrl+n=new_window

keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right

keybind = ctrl+a>h=new_split:left
keybind = ctrl+a>j=new_split:down
keybind = ctrl+a>k=new_split:up
keybind = ctrl+a>l=new_split:right
keybind = ctrl+a>f=toggle_split_zoom

keybind = ctrl+alt+left=resize_split:left,30
keybind = ctrl+alt+right=resize_split:right,30
keybind = ctrl+alt+up=resize_split:up,30
keybind = ctrl+alt+down=resize_split:down,30

keybind = ctrl+a>d=close_surface

keybind = ctrl+a>shift+l=next_tab
keybind = ctrl+a>shift+h=previous_tab

keybind = ctrl+a>r=reload_config
# keybind = super+r=reload_config

window-save-state = always
